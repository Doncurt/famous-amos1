extends layout

block content


    .row.justify-content-center
        .col-sm-6
            legend New Pet
            form(action="/pets", method="POST")
                .form-group
                    label Name
                    input.form-control(name="name")
                .form-group
                    label Species
                    input.form-control(name="species")
                .form-group
                    label Pet Image
                    input.form-control(type="file" name="picUrl")
                .form-group
                    label Square Image URL
                    input.form-control(name="picUrlSq")
                .form-group
                    label Birthday
                    input.form-control(name="birthday")
                .form-group
                    label Favorite Food
                    input.form-control(name="favoriteFood")
                .form-group
                    label Descriptiontype="file"
                    textarea.form-control(name="description")
                button(type="submit").btn.btn-primary Save
